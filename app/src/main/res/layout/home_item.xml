<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@drawable/record_normal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/name_left"
        android:layout_marginTop="@dimen/name_top"
        android:textColor="@color/home_record"
        android:textSize="@dimen/home_record_name" />

    <TextView
        android:id="@+id/age_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/age_left"
        android:layout_marginTop="@dimen/name_top"
        android:textColor="@color/home_record"
        android:textSize="@dimen/home_record_age" />

</LinearLayout>