<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <com.qg.kinectdoctor.view.TopbarZ
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rela_name"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/name"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="12.5dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:hint="@string/click_enter"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <RelativeLayout
                android:id="@+id/rele_age"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/age"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:hint="@string/click_enter"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <RelativeLayout
                android:id="@+id/rela_sex"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/sex"/>

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:hint="@string/click_enter"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <RelativeLayout
                android:id="@+id/rela_phonenum"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/phonenum"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:layout_marginLeft="120dp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:hint="@string/click_enter"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <RelativeLayout
                android:id="@+id/rela_allergy_medications"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:minHeight="50dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/allergy_medications"/>

                <EditText
                    android:id="@+id/allergy_medications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@null"
                    android:textSize="14dp"
                    android:maxLines="4"
                    android:hint="@string/click_enter"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <RelativeLayout
                android:id="@+id/rela_medical_condition"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="23.5dp"
                    android:layout_centerVertical="true"
                    android:text="@string/medical_condition"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12.5dp"
                    android:src="@drawable/to"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginLeft="23.5dp"/>

            <Button
                android:id="@+id/save_records"
                android:layout_width="293dp"
                android:layout_height="83dp"
                android:layout_marginTop="32.5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/save_records"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>